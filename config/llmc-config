#!/usr/bin/env bash
# llmc-config - LLMC Configuration Management CLI
# Simple wrapper for the Python configuration tools

set -euo pipefail

# Resolve script directory
SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
LLMC_ROOT="$(dirname "$SCRIPT_DIR")"

# Find Python and configuration module
PYTHON_BIN="${PYTHON_BIN:-python3}"
CONFIG_MODULE="$LLMC_ROOT/config"

# Check if config module exists
if [ ! -d "$CONFIG_MODULE" ]; then
    echo "Error: Configuration module not found at $CONFIG_MODULE" >&2
    exit 1
fi

# Add config module to Python path and run CLI
export PYTHONPATH="$CONFIG_MODULE:$PYTHONPATH"

exec "$PYTHON_BIN" -m config.cli "$@"
#!/usr/bin/env python3
"""
Front door CLI for LLMC RAG Repo registry management.

This wrapper ensures the repo root is on sys.path, then delegates to
`tools.rag_repo.cli.main()` so `llmc-rag-repo` behaves the same whether
invoked via this script or `python -m tools.rag_repo.cli`.
"""

import sys
from pathlib import Path


def main() -> int:
    repo_root = Path(__file__).parent.parent.resolve()
    if str(repo_root) not in sys.path:
        sys.path.insert(0, str(repo_root))

    from tools.rag_repo import cli as rag_repo_cli  # type: ignore[import]

    return rag_repo_cli.main()


if __name__ == "__main__":
    raise SystemExit(main())


#!/usr/bin/env python3
"""
Front door CLI for the LLMC RAG Daemon.

This wrapper ensures the repo root is on sys.path, then delegates to
`tools.rag_daemon.main.main()` so `llmc-rag-daemon` behaves the same
whether invoked via this script or `python -m tools.rag_daemon.main`.
"""

import sys
from pathlib import Path


def main() -> int:
    repo_root = Path(__file__).parent.parent.resolve()
    if str(repo_root) not in sys.path:
        sys.path.insert(0, str(repo_root))

    from tools.rag_daemon import main as rag_daemon_main  # type: ignore[import]

    return rag_daemon_main.main()


if __name__ == "__main__":
    raise SystemExit(main())


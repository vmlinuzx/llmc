#!/usr/bin/env python3
"""
LLMC CLI Entry Point - Root launcher script.

This script ensures proper module path setup before importing the main CLI.
Can be run from anywhere: python3 llmc-cli or ./llmc-cli
"""

import sys
from pathlib import Path

# Add repo root to Python path so 'from llmc' imports work
repo_root = Path(__file__).parent.resolve()
if str(repo_root) not in sys.path:
    sys.path.insert(0, str(repo_root))

# Now import and run the CLI
from llmc.main import app

if __name__ == "__main__":
    app()

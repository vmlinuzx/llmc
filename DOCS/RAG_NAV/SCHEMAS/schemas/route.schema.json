{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "llmc://schemas/rag_nav/route.schema.json",
  "title": "RAG Nav RouteDecision",
  "type": "object",
  "properties": {
    "use_rag": {
      "type": "boolean",
      "description": "If true, handlers used the RAG graph."
    },
    "freshness_state": {
      "type": "string",
      "enum": [
        "FRESH",
        "STALE",
        "UNKNOWN"
      ]
    },
    "status": {
      "description": "Optional status blob from IndexStatus (shape may vary).",
      "type": [
        "object",
        "null"
      ],
      "properties": {
        "index_state": {
          "type": [
            "string",
            "null"
          ]
        },
        "last_indexed_commit": {
          "type": [
            "string",
            "null"
          ]
        },
        "last_indexed_at": {
          "type": [
            "string",
            "null"
          ]
        },
        "error": {
          "type": [
            "string",
            "null"
          ]
        },
        "message": {
          "type": [
            "string",
            "null"
          ]
        }
      },
      "additionalProperties": true
    }
  },
  "required": [
    "use_rag",
    "freshness_state"
  ],
  "additionalProperties": true
}

